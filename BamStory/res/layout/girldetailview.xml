<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android">
        
	<RelativeLayout
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:background="#242424">     
	     	<TextView
	     		android:layout_width="wrap_content"
	     		android:layout_height="wrap_content"
	     		android:textAppearance="?android:attr/textAppearanceLarge"
	     		android:text="언니정보"
	     		android:layout_centerHorizontal="true"
	     		android:gravity="center_horizontal"
	     		android:layout_marginLeft="10dip"
	     		android:layout_marginTop="3dip"
	     		android:layout_marginBottom="3dip">
	     	</TextView>
	</RelativeLayout>   
    
    <RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="80dip"
    	>
    	<ImageView
    		android:id="@+id/girl_profileImg"
    		android:layout_width="60px"
    		android:layout_height="60px"
    		android:layout_alignParentLeft="true"
    		android:layout_marginLeft="10dip"
    		android:layout_marginTop="6dip"></ImageView>
	     <LinearLayout
	    	android:layout_width="wrap_content"
	    	android:layout_height="fill_parent"
	    	android:layout_toRightOf="@id/girl_profileImg"
	    	android:layout_marginLeft="10dip"
	    	android:orientation="vertical"> 	
    		<TextView 
	     		android:id="@+id/girl_nickName"
	     		android:layout_width="wrap_content"
	     		android:layout_height="wrap_content"
	     		android:textAppearance="?android:attr/textAppearanceMedium"
	     		android:layout_marginTop="3dip"
	     		android:layout_marginBottom="3dip"/>    			
    		<TextView 
	     		android:id="@+id/girl_contactName"
	     		android:layout_width="wrap_content"
	     		android:layout_height="wrap_content"
	     		android:textAppearance="?android:attr/textAppearanceSmall"
	     		android:layout_marginTop="3dip"
	     		android:layout_marginBottom="3dip"/>     		
    		
    	 </LinearLayout>
	     <TextView
	    	android:layout_width="100dip"
	    	android:layout_height="fill_parent"
	    	android:id="@+id/girl_likeCount"
	    	android:gravity="right"
	    	android:layout_marginLeft="10dip"
	    	android:layout_alignParentTop="true"
	    	android:layout_alignParentRight="true" > 	
    	 </TextView>    	 
    </RelativeLayout>
    <TextView 
    	android:id="@+id/girl_profile"
    	android:layout_width="fill_parent"
    	android:layout_height="50dip"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginRight="10dip"
    	android:layout_marginBottom="5dip">
    </TextView>
    <LinearLayout
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">
        
    	<Button
    		android:id="@+id/girl_sudaViewBtn"
		    android:layout_width="wrap_content"
		    android:layout_height="30dip"
		    android:layout_margin="1dip"
		    android:layout_weight="1"
		    android:background="@drawable/menubutton"
		    android:textColor="#ffffff"
		    android:text="언니수다방">    	
		</Button>
    	<Button
    		android:id="@+id/girl_imageViewBtn"
		    android:layout_width="wrap_content"
		    android:layout_height="30dip"
		    android:layout_margin="1dip"
		    android:background="@drawable/menubutton"
		    android:layout_weight="1"
		    android:textColor="#ffffff"
		    android:text="사진"/> 
    </LinearLayout>	
    <FrameLayout 
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:background="#000000"
	    	android:layout_margin="5dip"
	    	android:layout_weight="1">
	    <LinearLayout
	    	android:id="@+id/girl_sudaView"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:visibility="visible">
    		<ListView android:id="@+id/girl_stories"
    			android:cacheColorHint="#00000000"
       			android:layout_width="fill_parent" 
        		android:layout_height="fill_parent"/>
		</LinearLayout>	    	
		
	    <ScrollView
	    	android:id="@+id/girl_imageView"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:scrollbarStyle="insideOverlay"
    		android:visibility="invisible">
    		<RelativeLayout
		    	android:layout_width="fill_parent"
		        android:layout_height="500dip"
		        >
		        <ImageView 
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentTop="true"
		        	android:layout_centerHorizontal="true"
		        	android:id="@+id/girl_profileImage1"/>
		        <ImageView 
		        	android:layout_marginTop="3dip"
		        	android:layout_below="@id/girl_profileImage1"
		        	android:layout_centerHorizontal="true"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:id="@+id/girl_profileImage2"/>
		    </RelativeLayout>
		</ScrollView>		    	
	 </FrameLayout>    	
</LinearLayout> 