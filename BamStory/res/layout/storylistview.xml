<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/storyListView"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="horizontal"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dip"
		android:layout_marginRight="10dip"
		>
		<ImageView
			android:id="@+id/storyProfileImage"
			android:layout_width="45dip"
			android:layout_height="45dip"
			android:layout_gravity="right"
			android:layout_marginLeft="10dip"
		>
		</ImageView>	
		<com.bizwave.bamstory.view.CustomImageButton
			android:id="@+id/story_more"
			android:layout_width="45dip"
			android:layout_height="20dip"
			android:layout_marginLeft="10dip"
			android:layout_below="@+id/storyProfileImage"
			android:src="@drawable/more"
			android:visibility="invisible"
			android:background="#a0000000"
			android:layout_marginTop="3dip"
		>
		</com.bizwave.bamstory.view.CustomImageButton>			
	</RelativeLayout>	
	
	<LinearLayout
		android:id="@+id/storyListView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip"
		android:orientation="vertical"
	>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			<TextView
				android:id="@+id/storyNickNameText"
				android:layout_width="200dip"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_alignParentLeft="true"
				android:gravity="left"
				android:layout_centerVertical="true">
			</TextView>				
			<TextView
				android:id="@+id/storyCreatedText"
				android:layout_width="60dip"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_alignParentRight="true"
				android:gravity="right"
				android:layout_marginRight="5dip"
				android:layout_centerVertical="true">
			</TextView>	
			<TextView
				android:id="@+id/storyReplyCountText"
				android:layout_width="40dip"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_toLeftOf="@+id/storyCreatedText"
				android:gravity="right"
				android:layout_centerVertical="true">
			</TextView>						
		</RelativeLayout>
		<TextView
			android:id="@+id/storyContents"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
		>
		</TextView>	
		
	</LinearLayout>


</LinearLayout>
